<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:GroupFootersWPF"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid">

    <Style TargetType="local:GroupFooter">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:GroupFooter">
                    <Border TextElement.Foreground="Black">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,0.001" StartPoint="0.5,0.999">
                                <GradientStop Color="#FFB6CEEC" Offset="0" />
                                <GradientStop Color="#FFCBE2FF" Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <dxg:GroupSummaryAlignByColumnsLayoutControl DataContext="{Binding Path=GroupRowData, RelativeSource={RelativeSource TemplatedParent}}" dxg:RowData.CurrentRowData="{Binding}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
